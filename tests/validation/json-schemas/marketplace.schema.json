{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "marketplace.schema.json",
  "title": "Claude Marketplace Schema",
  "description": "Schema for marketplace.json configuration",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Marketplace entry name"
    },
    "owner": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        }
      }
    },
    "plugins": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/pluginEntry"
      }
    }
  },
  "$defs": {
    "pluginEntry": {
      "type": "object",
      "required": ["name", "description", "version", "source"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": { "type": "string" }
          }
        },
        "source": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "enum": ["development", "productivity", "utilities", "integration", "other"]
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
